%html{lang: "ja"}
  %head
    %meta{charset: "utf-8"}
    %meta{
      name: "viewport",
      content: "width=device-width, initial-scale=1",
      }
    %link{rel: "stylesheet", type: "text/css", href: "{% static 'css/bundle.css' %}"}
    %title
      BMS - Bookmark Management Service
    :css
      html {
        position: relative;
      }
      body {
        padding-top: 80px;
        margin-bottom: 60px;
      }
      .footer {
        position: absolute;
        bottom: 0px;
        width: 100%;
        height: 60px;
        background-color: #f0f0f0;
      }

  %body
    - modal login
      Login to BMS
    - modal_body
      %form
        %div.form-group
          %label{for: "username"}
            Username
          %input#username.form-control{
            placeholder: "Username",
            type: "text",
            }
        %div.form-group
          %label{for: "password"}
            Password
          %input#password.form-control{
            placeholder: "Password",
            type: "password",
            }
        %button.btn.btn-success.btn-block{type: "submit"}
          Login
    - endmodal

    %header
      %nav.navbar.navbar-default.navbar-fixed-top
        %div.container
          %div.navbar-header
            %a.navbar-brand{href: "#"}
